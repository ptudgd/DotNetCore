
@{
    ViewData["Title"] = "AdminList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="page-wrapper" style="min-height: 585px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách truyện</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh sách truyện
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">


                    <table id="example" class="table table-striped table-bordered" style="width: 100%;">
                        <thead>
                            <tr role="row">
                                <th style="width: 170px;">#</th>
                                <th style="width: 206px;">Tên</th>
                                <th style="width: 80px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in this.ViewBag.Result)
                            {
                                <tr class="gradeX odd" role="row">
                                    <td class="">@item.StoryId</td>
                                    <td>@item.Name</td>

                                    <td>
                                        <a title="Xem" href="/AdminStory/Detail?ActionCmd.StoryId=@item.StoryId" target="_blank" type="button" class="btn btn-default btn-sm " style=" ">
                                            <span class="glyphicon glyphicon-list-alt"></span> Xem
                                        </a>
                                        <a title="Xóa" onclick="DeleteStory(@item.StoryId);" href="#" type="button" class="btn btn-danger btn-sm">
                                            <span class="glyphicon glyphicon-remove"></span> Xóa
                                        </a>
                                        <a title="Sửa" onclick="ShowModal('/AdminStory/GetById?ActionCmd.StoryId=@item.StoryId')" href="#" type="button" class="btn btn-warning btn-sm">
                                            <span class="glyphicon glyphicon-edit"></span> Sửa
                                        </a>


                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

</div>