            </div>
        </div>
        <div class="cf mt-40 mb-20">
            <div class="col-md-12">
                <center>
                </center>
                <center>
                    </br>
                    </br>
                </center>
            </div>
        </div>
        <div class="cf">
            <div class="col-md-12">
                <p class="h1-title"><a href="truyen-moi-cap-nhat/">Mới cập nhật</a></p>
                <div class="new-update">
                    <table class="table table-bordered table-hover table-responsive">
                        <thead>
                            <tr>
                                <th>Truyện</th>
                                <th>Thể loại</th>
                                <th class="text-center">Chương</th>
                                <th>Cập nhật</th>
                            </tr>
                        </thead>
                        @foreach (var item in this.ViewBag.StoryNewUpdate)
                        {
                            <tr>
                                <td><a href="/Story?ActionCmd.StoryId=@item.StoryId" title="@item.Name">@item.Name</a></td>
                                <td>
                                    @{
                                        var cmd = new TagGetByIdAction();
                                        cmd.StoryId = item.StoryId;
                                        var tag = cmd.Execute().Data;
                                    }
                                    @foreach (var items in tag)
                                    {
                                        <a href="/Category/@items.CategoryId">@items.Name</a>
                                    }

                                </td>
                                <td class="text-center"><a href="@string.Format("/Story?ActionCmd.StoryId={0}&ActionCmd.ChapterId={1}",item.StoryId,item.TotalChapter)">@item.TotalChapter</a></td>
                                <td>@item.EditDate</td>
                            </tr>
                        }


                    </table>
                </div>
            </div>
            
        </div>

        <div class="col-md-12">
            <p class="h1-title"><a href="truyen-hot/">Truyện xem nhiều</a></p>
            <div class="row">
                @foreach (var item in this.ViewBag.StoryView)
                {
                    <div class="col-md-3 col-xs-6 col-sm-4 books-item heightLine-09">
                        <div class="row">
                            <div class="col-md-4">
                                <a href="/Story?ActionCmd.StoryId=@item.StoryId"><img src="@item.Image" alt="@item.Name" title="@item.Name" class="img-thumbnail" /></a>
                            </div>
                            <div class="col-md-8">
                                <h2><a href="/Story?ActionCmd.StoryId=@item.StoryId" class="list-title " alt="@item.Name">@item.Name</a></h2>
                                <h3 class="index-genre">
                                    <i class="fa fa-folder-open" aria-hidden="true"></i>
                                    @{
                                        var tags = new TagGetByIdAction();

                                        tags.StoryId = item.StoryId;
                                        var dataTag = tags.Execute().Data;
                                    }
                                    @foreach (var items in dataTag)
                                    {
                                        <a href="/category/@items.CategoryId">@items.Name</a>@string.Format(",")
                                    }
                                </h3>

                                    <p>
                                        <i class="fa fa-file-text" aria-hidden="true"></i>
                                        @item.TotalChapter<span class="full">@item.StatusName</span>
                                    </p>
</div>
                        </div>
                    </div>
                }

            </div>
        </div>

    </div>
</div>